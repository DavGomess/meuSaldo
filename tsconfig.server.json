{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Commonjs",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext"],
        "jsx": "react-jsx"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/app.ts"],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        ".next",
        "src/app",
        "src/components",
        "src/contexts",
        "src/utils",
        "src/**/*.tsx", 
        "!src/app.ts",
        ]
}
