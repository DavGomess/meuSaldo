{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["esnext"],
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
